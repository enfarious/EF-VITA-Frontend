{
	"name": "ef-vita-frontend",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "EF-VITA Tribe Management Frontend (API-contract-first)",
	"engines": {
		"node": ">=20.19.0 || >=22.12.0"
	},
	"scripts": {
    "dev": "vite",
    "dev:api": "node scripts/dev-module-api.mjs",
    "dev:api:watch": "nodemon --watch scripts --ext mjs --exec \"node scripts/dev-module-api.mjs\"",
    "dev:all": "node scripts/dev-all.mjs",
    "env:local": "node scripts/switch-env.mjs local",
    "env:prod": "node scripts/switch-env.mjs prod",
    "seed:module": "node scripts/seed-module-db.mjs",
    "build": "tsc -p tsconfig.json && vite build",
    "build:module": "npm run build && node scripts/deploy-module-ui.mjs",
		"preview": "vite preview",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"lint": "eslint . --ext .ts,.tsx",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"openapi:types": "openapi-typescript contracts/openapi.yaml -o src/types/api.d.ts",
		"openapi:lint": "npx @redocly/cli lint contracts/openapi.yaml"
	},
	"dependencies": {
		"@tanstack/react-query": "^5.59.0",
		"@tanstack/react-query-devtools": "^5.59.0",
		"@tanstack/react-router": "^1.87.0",
		"pg": "^8.13.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.15.0",
		"@tanstack/router-vite-plugin": "^1.145.2",
		"@types/node": "^25.0.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@vitejs/plugin-react": "^4.3.4",
		"eslint": "^9.15.0",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.14",
		"jsdom": "^25.0.1",
		"nodemon": "^3.1.4",
		"openapi-typescript": "^6.7.3",
		"prettier": "^3.3.3",
		"dotenv": "^16.4.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.15.0",
		"vite": "^7.3.0",
		"vitest": "^4.0.16"
	},
	"volta": {
		"node": "20.19.4"
	}
}
